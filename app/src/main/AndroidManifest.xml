<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pipegame.comp3717.bcit.ca.pipegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        ​<activity android:name=".ScoreActivity" android:parentActivityName=".MainActivity">
        ​​​​​​​​​​​​<intent-filter>
        ​​​​​​​​​​​​​​​​<action android:name="android.intent.action.SCORE" />
        ​​​​​​​​​​​​​​​​<category android:name="android.intent.category.DEFAULT" />
        ​​​​​​​​​​​​</intent-filter>
        ​​​​​​​​</activity>

        ​<activity android:name=".GameActivity" android:parentActivityName=".MainActivity">
        ​​​​​​​​​​​​<intent-filter>
        ​​​​​​​​​​​​​​​​<action android:name="android.intent.action.GAME" />
        ​​​​​​​​​​​​​​​​<category android:name="android.intent.category.DEFAULT" />
        ​​​​​​​​​​​​</intent-filter>
        ​​​​​​​​</activity>

        ​<activity android:name=".LevelSelect" android:parentActivityName=".MainActivity">
        ​​​​​​​​​​​​<intent-filter>
        ​​​​​​​​​​​​​​​​<action android:name="android.intent.action.LevelSelect" />
        ​​​​​​​​​​​​​​​​<category android:name="android.intent.category.DEFAULT" />
        ​​​​​​​​​​​​</intent-filter>
        ​​​​​​​​</activity>

    </application>

</manifest>